<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="Inloggen"
             BackgroundColor="#F7F8FB">

    <Grid Padding="20" VerticalOptions="Center">
        <!-- Simpele 'card' met afgeronde hoeken en schaduw -->
        <Frame Padding="20" CornerRadius="12" HasShadow="True" BackgroundColor="White" WidthRequest="320">
            <VerticalStackLayout Spacing="12">
                <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#1E293B"/>

                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" BackgroundColor="#F1F5F9" />
                <Entry Placeholder="Wachtwoord" Text="{Binding Password}" IsPassword="True" BackgroundColor="#F1F5F9" />

                <Button Text="Inloggen" Command="{Binding LoginCommand}" BackgroundColor="#C49B33" TextColor="White" CornerRadius="10"/>

                <Label Text="{Binding LoginMessage}" TextColor="Red" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>